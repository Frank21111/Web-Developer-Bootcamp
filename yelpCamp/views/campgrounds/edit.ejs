
<%- layout("layouts/boilerplate.ejs") %> 
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" enctype="multipart/form-data" novalidate>
                <div class="mb-3 column-6">
                    <label class="form-label" for="title">Title: </label>
                    <input type="text" class="form-control" value="<%=campground.title%>"" id="title" name="campground[title]" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Location">Location: </label>
                    <input type="text" class="form-control" value="<%=campground.location%>"  name="campground[location]" id="Location" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Images: </label>
                    <input type="file" class="form-control"   name="campground[image]" id="image" multiple required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control"  id="price" value=<%=campground.price%>  name="campground[price]" aria-label="Username" aria-describedby="basic-addon1" required>
                  </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Description">Description: </label>
                    <textarea class="form-control" name="campground[description]" id="Description" required><%=campground.description%></textarea>
                </div>
                <div class="d-flex flex-column align-items-center">
                    <% campground.image.forEach((img, index)=>{%>
                        <div class="mb-3 col-9 d-flex">
                            <div class="col-9">
                            <figure>
                                <img src=<%=campground.image[index].url%> class="img-thumbnail  rounded ">
                            </figure>
                            </div> 
                            <div class="form-check align-self-center col-3">
                                  <input type="checkbox" id="<%=`img-${index}`%>" name="deleteimages[]" value="<%=img.filename%>">
                                  <label for="<%=`img-${index}`%>">Delete</label>
                            </div>   
                            
                        </div>
                    <% }) %> 
                </div>
                <div class="mb-3">
                <button class="btn btn-info">Update campground</button></div>
            </form>
             <a class="link-info fw-bold" href="/campgrounds">Back to Campgrounds</a>
        </div>
       
    </div>


    <script>
        (function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  const forms = document.querySelectorAll('.validated-form')

  // Loop over them and prevent submission
  Array.from(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
    </script>